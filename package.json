{
  "name": "affirmation-wallpaper",
  "productName": "Affirmation Wallpaper",
  "version": "0.1.0",
  "description": "AI-powered affirmation wallpaper that generates personalized motivational desktop backgrounds",
  "author": "Your Name",
  "license": "MIT",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "node-cron": "^3.0.3",
    "wallpaper": "^7.2.1"
  },
  "devDependencies": {
    "electron": "28.3.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.affirmation.wallpaper",
    "productName": "Affirmation Wallpaper",
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "target": "dmg",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
