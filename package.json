{
  "name": "affirmation-screensaver",
  "productName": "Affirmation Screensaver",
  "version": "0.1.0",
  "description": "AI-powered affirmation screensaver that generates personalized motivational images",
  "author": "Your Name",
  "license": "MIT",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.affirmation.screensaver",
    "productName": "Affirmation Screensaver",
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.lifestyle",
      "target": "dmg",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
